{
	"compilerOptions": {
		"declaration": true,
		"typeRoots": [
			"src/types"
		],

		"target": "ES2015",
		"module": "ES2020",
		"strict": true,
		"declarationMap": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"stripInternal": true,
		"lib": [
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ESNext",
			"DOM"
		]
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_module",
	]
}
